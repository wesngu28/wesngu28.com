---
import { Image } from 'astro:assets'

export interface Props {
  images: Array<ImageMetadata>
  name: string[]
  grid: string
  heading: string
  desc: string
}

const { images, name, heading, desc, grid } = Astro.props
---

<li class="border bg-[#21222a] relative p-4 m-4 rounded-2xl w-[300px] lg:w-[350px] h-[300px] xl-w-auto  group flex items-center justify-center hover:scale-105 hover:z-50 ease-out duration-500">
  <div class={`${grid} group-hover:hidden`}>
    {
      images.map((arr, i) => {
        return (
          <div class="m-2 lg:p-2 ultrawide:p-0 relative flex items-center justify-center">
            <Image
              class="w-auto h-auto object-contain"
              alt={`${name[i]} logo`}
              src={arr}
              format={'webp'}
              title={name[i]}
            />
          </div>
        )
      })
    }
  </div>
  <div class="absolute items-center justify-center hidden group-hover:flex flex-col group-hover:relative group-hover:p-1">
    <h2 class="text-2xl font-bold mb-4">{heading}</h2>
    <p>{desc}
    </p>
  </div>
</li>
