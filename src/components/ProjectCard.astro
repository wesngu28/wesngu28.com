---
import { Image } from '@astrojs/image/components'
import Github from './Github'
import github from '../assets/github.png'
import crown from '../assets/crown.png'
import extern from '../assets/external-link.png'
import Techbar from './Techbar.astro'
import { langs } from '../utils/LanguageList'

export interface Props {
  techs: string[]
  image: ImageMetadata
  name: string
  desc: string
  url: string
  live?: string
  md?: string
  hackathon?: boolean
}

const { techs, image, name, desc, url, live, md, hackathon } = Astro.props
---

<li
  class="transition duration-500 hover:scale-105 hover:skew-y-1 p-4 bg-[#21222a] m-4 flex flex-col justify-center relative rounded-lg place-items-center w-[300px] tiny:w-[400px] md:w-auto 2xl:w-3/4"
>
  <Image
    loading={'lazy'}
    format={'webp'}
    alt={`${name} screenshot or related content if no screenshot makes sense`}
    src={image}
  />
  <Github langs={langs} url={url} client:idle />
  <div class={`pr-2 pl-2 mb-5`}>
    <div class="mt-4">
      <div class="flex justify-between items-center mb-4 w-full">
        <a target="_blank" href={url} rel="noopener noreferrer">
          <h2 class="hover:underline m-2 text-left font-bold text-2xl">
            {name}
          </h2>
        </a>
        <div class="flex items-center">
          {
            hackathon && (
              <Image
                class={'m-1'}
                width={30}
                height={30}
                alt="external link"
                src={crown}
              />
            )
          }
          <a
            target="_blank"
            href={url}
            rel="noopener noreferrer"
            class="text-black md:text-xl hover:underline m-1"
          >
            <Image width={30} height={30} alt="external link" src={github} />
          </a>
          {
            live && (
              <a
                target="_blank"
                href={live}
                rel="noopener noreferrer"
                class="text-black md:text-xl hover:underline m-1"
              >
                <Image alt="external link" src={extern} />
              </a>
            )
          }
        </div>
      </div>
      <p class="m-2 h-24 text-[0.825rem] sm:text-sm ultrawide:text-base">{desc}</p>
    </div>
    {
      md && (
        <a href={`/projects/${md}`}>
          <div class="flex items-center gap-2 justify-end mr-5">
          <p>Read More</p>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="currentColor"
            class="bi bi-arrow-right"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"
            />
          </svg>
          </div>
        </a>
      )
    }
  </div>
  <Techbar techs={techs} />
</li>
