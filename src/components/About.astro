---
import AboutHome from './AboutHome.astro'
import AboutMe from './AboutMe.astro'
import Navbar from './Navbar.astro'

export interface Props {
  header: string
}

const { header } = Astro.props
---

<div class="p-4 bg-[#1F2022] w-full md:max-w-[1280px] relative z-0">
  <Navbar />
  <div class="md:p-16 w-full lg:w-5/6 xl:w-3/4">
    {
      header === 'Wesley Nguyen' ? (
        <AboutHome />
      ) : header === 'About Me' ? (
        <AboutMe />
      ) : header === 'My Blog' ? (
        <>
          <h1 class="text-6xl font-bold m-4 mb-8">My Blog</h1>
          <p class="m-4 text-xl">
            Why does this blog exist in the first place? Well, I just wanted a place to be
            able to type out some thoughts and feelings I have bubbled up inside on
            various topics, as well as document my projects and things I've learned.
          </p>
        </>
      ) : (
        <h1 class="text-6xl font-bold m-4 mb-8">My Projects</h1>
      )
    }
  </div>
</div>
