---
import '../styles/base.css'
import Footer from '../components/Footer.astro'
import { Image } from '@astrojs/image/components'
import BlogPostAbout from '../components/BlogPostAbout.astro'
export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage: string
    heroImageAlt: string
    heroImageAttr: string
  }
}
import '@fontsource/lora'
import Base from './Base.astro'

const {
  content: {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    heroImageAlt,
    heroImageAttr,
  },
} = Astro.props
---

<Base title={title} map={true}>
  <div class="flex flex-col justify-center items-center h-full w-full">
    <BlogPostAbout header={title} paragraph1={description} />
    <div class="w-[100vw] mb-12 relative flex items-center justify-center">
      <article class="w-full md:w-[75vw] lg:w-[55vw]">
        <Image
          alt={heroImageAlt}
          format={'webp'}
          loading={'eager'}
          title={heroImageAttr}
          width={720}
          height={360}
          src={heroImage}
          class="p-4 m-auto"
        />
        {
          pubDate && (
            <p class="text-lg text-center m-2">
              <time>{pubDate}</time>
            </p>
          )
        }
        {
          updatedDate && (
            <div class="text-">
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <hr />
        <div class="prose prose-xl prose-invert max-w-none p-6">
          <slot />
        </div>
      </article>
    </div>
    <div class="relative">
      <Footer />
    </div>
  </div>
</Base>
