---
import '../styles/base.css'
import About from '../components/About.astro'
import TopSVG from '../components/TopSVG.astro'
import Layout from './Layout.astro'
import Footer from '../components/Footer.astro'
import { Image } from '@astrojs/image/components'
import AboutNavigation from '../components/AboutNavigation.astro'
export interface Props {
  content: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    heroImage: string
    heroImageAlt: string
    heroImageAttr: string
  }
}

const {
  content: {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    heroImageAlt,
    heroImageAttr,
  },
} = Astro.props
---

<Layout title={title}>
  <About
    header={title}
    paragraph1={description}
    image={heroImage}
    blog={true}
    imageAlt={heroImageAlt}
    imageAttr={heroImageAttr}
  />
  <div class="w-[100vw] relative flex items-center justify-center">
    <TopSVG />
    <article class="w-full md:w-[75vw] lg:w-[55vw]">
      <h1 class="mt-24 text-center text-5xl p-4 font-bold">{title}</h1>
      <Image
        alt={heroImageAlt}
        format={'webp'}
        loading={'eager'}
        title={heroImageAttr}
        width={720}
        height={360}
        src={heroImage}
        class="p-4 m-auto"
      />
      {
        pubDate && (
          <p class="text-lg text-center m-2">
            <time>{pubDate}</time>
          </p>
        )
      }
      {
        updatedDate && (
          <div class="text-">
            Last updated on <time>{updatedDate}</time>
          </div>
        )
      }
      <hr />
      <div class="blogpost">
        <slot />
      </div>
    </article>
  </div>
  <div class="m-2 flex items-center justify-center">
    <AboutNavigation />
  </div>
  <div class="mt-24">
    <Footer />
  </div>
</Layout>
