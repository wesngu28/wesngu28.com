---
import Footer from '../components/Footer.astro'
import Head from '../components/Head.astro'
import Navbar from '../components/Navbar.astro'
export interface Props {
  title: string
  map: boolean
}
import '../styles/global.css'

import '@fontsource-variable/karla'
const { title, map } = Astro.props
---

<!doctype html>
<html lang="en">
  <Head title={title} />
  {
    map ? (
      <body class="font-karla bg-linear-to-br from-black to-slate-900 text-gray-300 overflow-x-hidden min-h-screen">
        <slot />
      </body>
    ) : (
      <body class="font-karla flex flex-col items-center bg-linear-to-br from-black to-slate-900 text-gray-300 overflow-x-hidden min-h-screen">
        <div class="xl:flex relative items-center justify-center w-full bg-[#1F2022]">
          <div class="p-4 bg-[#1F2022] w-full md:max-w-[1280px] relative z-0">
            <Navbar />
            <slot name="about" />
          </div>
        </div>
        <div class="flex flex-col justify-center items-center h-full w-full overflow-x-hidden md:max-w-7xl">
          <slot />
        </div>
        <Footer />
      </body>
    )
  }
</html>

<script async src="https://nakiri.vercel.app/script.js" data-website-id="883460dc-b2a0-47fa-ac18-033ddc222cec"></script>
