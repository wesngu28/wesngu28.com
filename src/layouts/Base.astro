---
import About from '../components/About.astro';
import Footer from '../components/Footer.astro';
import Head from '../components/Head.astro';
import Sidebar from '../components/Sidebar.astro';
import '../styles/base.css'
export interface Props {
  title: string
}
import '@fontsource/karla';
const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title} />
  <body class="font-karla flex flex-col items-center bg-gradient-to-br from-black to-slate-900 text-gray-300 overflow-x-hidden min-h-screen" >
    <div id="wrapper" class="flex flex-col justify-center items-center h-full w-full md:w-2/3">
      <div class="md:flex relative items-center justify-center w-[100vw] bg-[#1F2022]">
        <div class="md:absolute hidden md:block md:left-0">
          <Sidebar />
        </div>
        <About header={title} />
        <div class="md:absolute block md:hidden md:left-0">
          <Sidebar />
        </div>
      </div>
      <slot />
      <Footer />
    </div>
  </body>
</html>
